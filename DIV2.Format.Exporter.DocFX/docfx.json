{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "*.csproj"
          ],
          "src": "../DIV2.Format.Exporter",
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "filter": "filterConfig.yml",
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml"
        ],
        "src": "obj"
      },
      {
        "files": [
          "api/*.md",
          "samples/**.md",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appFooter": "<span><center><strong>DIV2.Format.Exporter</strong> © Visual Studio EX3, José Miguel Sánchez Fernández - 2020 - 2022 | Site generated with <a href=\"https://dotnet.github.io/docfx\" target=\"_blank\"><strong>DocFX</strong></a></center></span>"
    },
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "logo.svg",
          "favicon.ico"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "template": [
      "default"
    ],
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
  }
}
